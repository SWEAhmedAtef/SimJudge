@model Test.Models.Contest
@{
    ViewBag.Title = "ContestCreation";
}

<h2>Contest Creation</h2>
@Html.ValidationSummary()
@using (Html.BeginForm("Save", "Contests"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.StartDate)
        @Html.TextBoxFor(x => x.StartDate, "{0:yyyy-MM-ddTHH:mm:ss}", new { @class = "form-control", @type = "datetime-local" })
        @Html.ValidationMessageFor(m => m.StartDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.EndDate)
        @Html.TextBoxFor(x => x.EndDate, "{0:yyyy-MM-ddTHH:mm:ss}", new { @class = "form-control", @type = "datetime-local" })
        @Html.ValidationMessageFor(m => m.EndDate)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}