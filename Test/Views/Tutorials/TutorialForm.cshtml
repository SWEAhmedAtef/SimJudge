@model Test.Models.Tutorial
@{
    ViewBag.Title = "TutorialForm";
}

@Html.ValidationSummary()
@using (Html.BeginForm("Save", "Tutorials"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TutorialDetails.Description)
        @Html.TextBoxFor(m => m.TutorialDetails.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TutorialDetails.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TutorialDetails.Tags)
        @Html.TextBoxFor(m => m.TutorialDetails.Tags, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TutorialDetails.Tags)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TutorialDetails.VideoUrl)
        @Html.TextBoxFor(m => m.TutorialDetails.VideoUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TutorialDetails.VideoUrl)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.ApplicationUserId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Submit</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}