@model Test.Models.Problem
@{
    ViewBag.Title = "SimJudge Problem Form";
}

<h2>SimJudge Problem Form</h2>

@Html.ValidationSummary()
@using (Html.BeginForm("SaveLocalProblem", "Problems", new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProblemDetails.Description)
        @Html.TextBoxFor(m => m.ProblemDetails.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProblemDetails.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProblemDetails.Input)
        @Html.TextBoxFor(m => m.ProblemDetails.Input, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProblemDetails.Input)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProblemDetails.Output)
        @Html.TextBoxFor(m => m.ProblemDetails.Output, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProblemDetails.Output)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProblemDetails.Notes)
        @Html.TextBoxFor(m => m.ProblemDetails.Notes, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProblemDetails.Notes)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SimJudgeDetails.TestCaseInput)
        @Html.TextBoxFor(m => m.SimJudgeDetails.TestCaseInput, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SimJudgeDetails.TestCaseInput)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SimJudgeDetails.TestCaseOutput)
        @Html.TextBoxFor(m => m.SimJudgeDetails.TestCaseOutput, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SimJudgeDetails.TestCaseOutput)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProblemDetails.TimeLimit)
        @Html.TextBoxFor(m => m.ProblemDetails.TimeLimit, new { @class = "form-control", @Value = "1" })
        @Html.ValidationMessageFor(m => m.ProblemDetails.TimeLimit)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProblemDetails.MemoryLimit)
        @Html.TextBoxFor(m => m.ProblemDetails.MemoryLimit, new { @class = "form-control", @Value = "256" })
        @Html.ValidationMessageFor(m => m.ProblemDetails.MemoryLimit)
    </div>

    @Html.AntiForgeryToken()
    <button class="btn btn-success" type="submit">Submit Problem</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}