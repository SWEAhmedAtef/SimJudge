@{
    ViewBag.Title = "Index";
}

<h2>Problems</h2>
<table id="problems" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Problem Name</th>
            <th>Source</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#problems").DataTable({
                ajax: {
                    url: "/api/problems",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, problem) {
                            return "<a href='/Problems/" + problem.id + "'>" + problem.name + "</a>";
                        }
                    },
                    {
                        data: "sourceWebsite.name"
                    }
                ]
            });

        });
    </script>
}
