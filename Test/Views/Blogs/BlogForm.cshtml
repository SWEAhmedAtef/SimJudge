@model Test.Models.Blog
@{
    ViewBag.Title = "BlogsForm";
}

@Html.ValidationSummary()
@using (Html.BeginForm("Save", "Blogs"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.BlogDetails.Description)
        @Html.TextBoxFor(m => m.BlogDetails.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BlogDetails.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.BlogDetails.Image)
        @Html.TextBoxFor(m => m.BlogDetails.Image, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BlogDetails.Image)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.BlogDetails.Link)
        @Html.TextBoxFor(m => m.BlogDetails.Link, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BlogDetails.Link)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.ApplicationUserId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Submit</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}